@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager NavigationManager
@page "/agregar-categoria"
<h3>Agregar articulo</h3>

<FormularioCategorias TextBoton="Agregar articulo" OnValidSubmit="@AgregarArticulo" Categorias="categoria"/>

@code {
    Categoria categoria = new Categoria();

    async Task AgregarArticulo()
    {
        await Http.PostJsonAsync("categorias", categoria);
        await JS.RegistroAgregadoAsync();
        NavigationManager.NavigateTo("indice-categorias");
    }

}
